<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head.ejs")%>
</head>

<body>
    <%- include("partials/nav.ejs")%>
        <div class="container__pergunta-resposta">
            <section class="pergunta">
                <h1>
                    <%= pergunta.titulo %>
                </h1>
                <p class="pergunta__data-publicacao">
                    <%= pergunta.createdAt %>
                </p>
                <p class="pergunta__descricao">
                    <%= pergunta.descricao %>
                </p>

            </section>
            <form class="resposta" method="post" action="/responder">
                <textarea class="resposta__input" rows="5" name="resposta" required></textarea>
                <label class="placeholder__responder">Resposta</label>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                <button type="submit" class="btn__responder">Responder</button>
            </form>
            <section class="visualizarRespostas">
                <h3>Respostas:</h3>
                <section>
                    <% respostas.forEach(resposta=> { %>
                        <div class="card card__respostas">
                            <div class="card-body">
                                <%= resposta.resposta %>
                            </div>
                        </div>
                        <% }) %>
                </section>
            </section>
            <aside class="relacionados">
                <h3 class="relacionados__titulo">Relacionados</h3>
                <p>texto</p>
                <p>texto</p>
                <p>texto</p>
                <p>texto</p>
            </aside>
        </div>
        <%- include ("partials/script.ejs") %>
</body>

</html>